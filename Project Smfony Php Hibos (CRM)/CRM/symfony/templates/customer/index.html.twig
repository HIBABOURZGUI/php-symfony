{% extends 'base.html.twig' %}

{% block title %}Liste des Clients{% endblock %}

{% block body %}
    <h1>Clients</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Email</th>
                <th>Téléphone</th>
                <th>Ville</th>
                <th>Pays</th>
                <th>Créé le</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
            <tr>
                <td>{{ customer.customerName }}</td>
                <td>{{ customer.email }}</td>
                <td>{{ customer.phone }}</td>
                <td>{{ customer.city }}</td>
                <td>{{ customer.country }}</td>
                <td>{{ customer.createdAt|date('d/m/Y H:i') }}</td>
                <td>
                    <a href="{{ path('customer_show', {'id': customer.id}) }}" class="btn btn-sm btn-secondary">Voir</a>
                    <a href="{{ path('customer_edit', {'id': customer.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                    <a href="{{ path('customer_delete', {'id': customer.id}) }}" class="btn btn-sm btn-danger"
                       onclick="return confirm('Supprimer ce client ?');">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7" class="text-center text-muted">Aucun client trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('customer_new') }}" class="btn btn-success">+ Nouveau Client</a>
{% endblock %}
